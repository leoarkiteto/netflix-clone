root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 80
tab_width = 4
trim_trailing_whitespace = true

[{*.ant,*.fxml,*.jhm,*.jnlp,*.jrxml,*.rng,*.tld,*.wsdl,*.xml,*.xsd,*.xsl,*.xslt,*.xul}]
indent_size = 4

[{*.gql,*.graphql,*.graphqls}]
indent_size = 4

[{*.htm,*.html,*.ng,*.sht,*.shtm,*.shtml}]
indent_style = tab
tab_width = 2

[{*.markdown,*.md}]
indent_size = 4
